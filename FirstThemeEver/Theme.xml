<BloxstrapCustomBootstrapper Version="0" Height="200" Width="500" Theme="Light">
	<TitleBar Title="Custom Bootstrapper Example" />
	<TextBlock Text="It works!" Width="400" HorizontalAlignment="Center" Margin="0,100,0,0" Foreground="{TextFillColorPrimaryBrush}" />
	<Image Height="100" Width="100" Source="{Icon}" Margin="0,10,0,0" HorizontalAlignment="Center">
		<RenderTransform>
			<SkewTransform AngleX="19" AngleY="23" />
		</RenderTransform>
	</Image>
	<TextBlock Name="StatusText" Width="400" HorizontalAlignment="Center" Margin="0,150,0,0" Foreground="{TextFillColorPrimaryBrush}" />
	<ProgressBar IsIndeterminate="True" Height="10" Width="400" HorizontalAlignment="Center" Margin="0,150,0,0" ZIndex="123">
		<RenderTransform>
			<RotateTransform Angle="90" />
		</RenderTransform>
	</ProgressBar>
	<ProgressBar IsIndeterminate="True" Height="10" Width="400" HorizontalAlignment="Center" Margin="0,160,0,0">
		<RenderTransform>
			<SkewTransform AngleX="19" AngleY="23" />
		</RenderTransform>
	</ProgressBar>
	<ProgressBar IsIndeterminate="True" Height="10" Width="400" HorizontalAlignment="Center" Margin="0,170,0,0" />
	<ProgressBar IsIndeterminate="True" Height="10" Width="400" HorizontalAlignment="Center" Margin="0,180,0,0" />
	<ProgressBar IsIndeterminate="True" Height="10" Width="400" HorizontalAlignment="Center" Margin="0,190,0,0" />
	<ProgressBar Name="PrimaryProgressBar" Height="10" Width="400" HorizontalAlignment="Center" Margin="0,200,0,0" />
	<Button Name="CancelButton" Content="Cancel" Height="30" Width="100" HorizontalAlignment="Center" Margin="0,225,0,0" />
</BloxstrapCustomBootstrapper>