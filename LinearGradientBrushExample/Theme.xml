<BloxstrapCustomBootstrapper Version="1" Height="320" Width="510" Theme="Light">
	<BloxstrapCustomBootstrapper.Background>
		<LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
			<GradientStop Color="Yellow" Offset="0.0" />
			<GradientStop Color="Red" Offset="0.25" />
			<GradientStop Color="Blue" Offset="0.75" />
			<GradientStop Color="LimeGreen" Offset="1.0" />
		</LinearGradientBrush>
	</BloxstrapCustomBootstrapper.Background>
	<TitleBar Title="" ShowMinimize="False" ShowClose="False" />
	<Image Source="{Icon}" Height="100" Width="100" HorizontalAlignment="Center" Margin="0,15,0,0" />
	<TextBlock HorizontalAlignment="Center" Name="StatusText" Width="500" FontSize="20" FontWeight="Bold" Margin="0,170,0,0" />
	<ProgressBar Width="400" Height="12" Name="PrimaryProgressBar" HorizontalAlignment="Center" Margin="0,200,0,0" />
	<Button Content="Cancel" Name="CancelButton" HorizontalAlignment="Center" Margin="0,220,0,0" Height="30" Width="100" />
</BloxstrapCustomBootstrapper>